<odoo>
  <!-- Form view definition -->
  <record id="view_habin_order_create_wizard_form" model="ir.ui.view">
    <field name="name">habin.order.create.wizard.form</field>
    <field name="model">habin.order.create.wizard</field>
    <field name="arch" type="xml">
      <form string="Create Order">
        <group>
          <field name="guest_id"/>
        </group>
        <group string="Filter by Price and Type">
          <field name="price_from"/>
          <field name="price_to"/>
          <field name="house_type"/>
          <field name="listing_id"/>
        </group>
        <group string="Booking Dates">
          <field name="check_in_date"/>
          <field name="check_out_date"/>
        </group>
        <footer>
          <button name="action_create_order" type="object" string="Create" class="btn-primary"/>
          <button string="Cancel" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>

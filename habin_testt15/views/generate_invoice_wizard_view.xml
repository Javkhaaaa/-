<odoo>
  <record id="view_generate_invoice_wizard_form" model="ir.ui.view">
    <field name="name">Generate Invoice Wizard</field>
    <field name="model">habin.generate.invoice.wizard</field>
    <field name="arch" type="xml">
      <form string="Generate Invoice">
        <group>
          <field name="order_detail_id"/>
          <field name="additional_notes"/>
          <field name="send_email"/>
        </group>
        <footer>
          <button name="action_generate_invoice" type="object" class="btn-primary" string="Generate &amp; Send"/>
          <button string="Cancel" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
